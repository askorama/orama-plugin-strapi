{
  "kind": "collectionType",
  "collectionName": "orama_collections",
  "info": {
    "singularName": "collection",
    "pluralName": "collections",
    "displayName": "Collections"
  },
  "options": {
    "draftAndPublish": false,
    "comment": ""
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "indexId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "outdated",
        "updating",
        "updated"
      ],
      "default": "outdated",
      "required": true
    },
    "entity": {
      "type": "string",
      "required": true
    },
    "includeRelations": {
      "type": "string",
      "required": false
    },
    "documentsCount": {
      "type": "integer",
      "default": 0
    },
    "updateHook": {
      "type": "enumeration",
      "enum": [
        "live",
        "cron"
      ],
      "default": "live",
      "required": true
    },
    "updateCron": {
      "type": "string",
      "default": "0 * * * *",
      "required": true
    },
    "deployedAt": {
      "type": "datetime"
    }
  }
}