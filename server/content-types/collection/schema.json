{
  "kind": "collectionType",
  "collectionName": "collections",
  "info": {
    "singularName": "collection",
    "pluralName": "collections",
    "displayName": "Collections"
  },
  "options": {
    "draftAndPublish": false,
    "comment": ""
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "indexId": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "outdated",
        "updating",
        "updated"
      ],
      "default": "outdated"
    },
    "entity": {
      "type": "string",
      "required": true
    },
    "updateHook": {
      "type": "enumeration",
      "enum": [
        "live",
        "cron"
      ],
      "default": "live"
    },
    "updateCron": {
      "type": "string",
      "default": "*/30 * * * *"
    },
    "deployedAt": {
      "type": "datetime"
    }
  }
}